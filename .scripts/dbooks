#!/bin/sh

books=$(ls -R /media/data/documents/Undergraduate | grep "pdf$")
[ "$books" = "" ] && exit 1
select=$(echo "$books" | rofi -lines 15 -dmenu -i -p "Select file")
[ "$select" = "" ] && exit 1
fullpath=$(find /media/data/documents/Undergraduate -name "$select" | head -n 1)
[ "$fullpath" = "" ] && exit 1
zathura "$fullpath"
